.env-list {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  .mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    .progress {
      position: absolute;
      left: 20%;
      top: 50%;
      width: 60%;
      margin-top: -15px;
      padding: 5px 10px;
      border-radius: 5px;
      background-color: #fff;
      z-index: 10;
      > i {
        margin-right: 5px;
      }
    }
  }
  .c-logo-icon {
    width: 92px;
    height: 25px;
    display: inline-block;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/gateway/portal/css/sprite/global-201803131822.svg);
    overflow: hidden;
    text-indent: -10000px;
    background-position: 0.64% 34.42%;
    background-size: 269.5652173913044% 960%;
    background-repeat: no-repeat;
  }
}
.env-list-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: auto;
  .env-list-panel {
    .panel-heading {
      height: 28px;
      line-height: 28px;
      background-color: $pane-item-background-color;
      padding: 0 10px;
      .fa {
        margin-right: 4px;
      }
      .c-logo-icon {
        transform: scale(0.7);
        float: right;
        transform-origin: right;
      }
    }
    .panel-body {
      position: absolute;
      top: 28px;
      bottom: 0;
      left: 0;
      right: 0;
      overflow: auto;
    }
    .server-info {
      color: #9c9c9c;
      padding: 10px 10px 10px 8px;
      border-left: 2px solid #f5f5f5;
      border-bottom: 1px solid #9c9c9c;
      .title {
        font-weight: bold;
        padding-bottom: 4px;
        .fa {
          margin-right: 6px;
        }  
      }
      .info-item {
        margin-top: 6px;
        display: flex;
        label {
          margin-right: 6px;
          margin-bottom: 0;
          display: flex;
        }
        .progress {
          border: 1px solid #FFF;
          flex: 1;
          width: 60px;
          margin-left: 6px;
          .curr {
            background: green;
            height: 100%;
          }
        }
      }
    }
    
    .env-item {
      padding: 10px 10px 10px 8px;
      border-left: 2px solid $pane-item-background-color;
      border-bottom: 1px solid $pane-item-background-color;
      position: relative;
      &.current {
        border-left-color: #578ddf;
      }
      .env-item-heading {
        font-weight: bolder;
        .fa-desktop {
          margin-right: 6px;
        }
      }
      .env-item-body {
        margin-top: 6px;
        color: #9c9c9c;
        font-size: 12px;
        .fa {
          margin-right: 6px;
        }
      }
      .env-label {
        color: #fff;
        font-size: 12px;
        padding: 2px 4px;
        margin-right: 6px;
        display: inline-block;
        -webkit-border-radius: 4px;
        font-weight: normal;
        line-height: 12px;
        &.env-public {
          background: #5e9ef3;
        }
        &.env-shared {
          background: #1aaf5d;
        }
      }
      .btn-group {
        position: absolute;
        right: 10px;
        top: 11px;
        display: none;
        .fa {
          margin-right: 6px;
        }
        button {
          margin-left: 6px;
        }
      }
      &:hover .btn-group {
        display: block;
      }
    }
  }
  
}