.env-list {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  .mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    .progress {
      position: absolute;
      left: 20%;
      top: 50%;
      width: 60%;
      margin-top: -15px;
      padding: 5px 10px;
      border-radius: 5px;
      background-color: #fff;
      z-index: 10;
      > i {
        margin-right: 5px;
      }
    }
  }
  .c-logo-icon {
    width: 92px;
    height: 25px;
    display: inline-block;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/gateway/portal/css/sprite/global-201803131822.svg);
    overflow: hidden;
    text-indent: -10000px;
    background-position: 0.64% 34.42%;
    background-size: 269.5652173913044% 960%;
    background-repeat: no-repeat;
  }
}
.env-list-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: auto;
  .env-list-panel {
    .panel-heading {
      height: 28px;
      line-height: 28px;
      background-color: $pane-item-background-color;
      padding: 0 10px;
      .fa {
        margin-right: 4px;
      }
      .c-logo-icon {
        transform: scale(0.7);
        float: right;
        transform-origin: right;
      }
    }
    .panel-body {
      position: absolute;
      top: 28px;
      bottom: 0;
      left: 0;
      right: 0;
      overflow: auto;
    }
    .server-info {
      display: flex;
      align-items: center;
      color: #9c9c9c;
      padding: 10px 10px 10px 8px;
      border-left: 2px solid #f5f5f5;
      border-bottom: 1px solid #9c9c9c;
      display: flex;
      .logo {
        width: 150px;
        .c-logo-icon {
          transform: scale(1.1);
          // float: right;
          transform-origin: left;
          margin-left: 16px;
        }
      }
      .server-info-content {
        flex: 1;
        .btn {
          color: #FFF;
          text-decoration: none;
        }
      }
      .title {
        font-weight: bold;
        padding-bottom: 4px;
        .fa {
          margin-right: 6px;
        }
      }
      .info-item.info-up {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          align-items: center;
          .info-detail {
              width: 120px;
          }
          .info-link {
              display: flex;
              justify-content: center;
              width: calc(100% - 120px);
          }
      }
      .info-item {
        margin-top: 6px;
        border-bottom: 1px solid #424242;
        padding-bottom: 10px;
        margin-bottom: 10px;
        &:last-child {
          border: none;
          padding-bottom: 0px;
          margin-bottom: 0px;
        }
        .info-line {
          display: flex;
          label {
            border-right: 1px solid #424242;
            padding-right: 10px;
            margin-right: 10px;
            font-size: 14px;
            line-height: 22px;
            font-weight: normal;
            &:last-child {
              border: none;
              padding-right: 0px;
              margin-right: 0px;
            }
          }
        }
        label {
          margin-right: 6px;
          margin-bottom: 0;
          display: flex;

          font-weight: normal;
        }

        .status {
          display: flex;
          padding-bottom: 4px;
          label {
            display: inline-block;
            width: 30px;
            // padding-right: 20px;
          }

          .progress {
            border: 1px solid $tab-bar-border-color;
            flex: 1;
            width: 60px;
            margin-left: 6px;
            border-radius: 2px;
            .curr {
              background: #5097E8;
              border-radius: 2px 0 0 2px;
              height: 100%;
            }
          }
        }
      }
    }

    .env-item {
      padding: 10px 10px 10px 8px;
      border-left: 2px solid $pane-item-background-color;
      border-bottom: 1px solid $pane-item-background-color;
      position: relative;
      &.current {
        border-left-color: #578ddf;
        background-color: #eeeeee1f;
      }
      .env-item-heading {
        display: flex;
        align-items: center;
        font-weight: bolder;
        .env-icon {
          display: inline-block;
          width: 18px;
          height: 18px;
          margin-right: 6px;
          svg {
            width: 100%;
            height: 100%;
          }
        }
      }
      .env-item-body {
        margin-top: 6px;
        color: #9c9c9c;
        font-size: 12px;
        .fa {
          margin-right: 6px;
        }
      }
      .env-label {
        color: #fff;
        font-size: 12px;
        padding: 2px 4px;
        margin-right: 6px;
        display: inline-block;
        -webkit-border-radius: 4px;
        font-weight: normal;
        line-height: 12px;
        &.env-public {
          background: #5e9ef3;
        }
        &.env-shared {
          background: #1aaf5d;
        }
      }
      .btn-group {
        position: absolute;
        right: 10px;
        top: 11px;
        display: none;
        .fa {
          margin-right: 6px;
        }
        button {
          margin-left: 6px;
        }
      }
      &:hover .btn-group {
        display: block;
      }
    }
    .env-add-button {
      margin: 0px;
      cursor: pointer;
      margin: 0 auto;
      display: flex;
      justify-content: center;
      padding: 16px 0px;
      border-left: 2px solid $pane-item-background-color;
      border-bottom: 1px solid $pane-item-background-color;
      & > button {
        color: #5097e8;
        display: inline-block;
        padding: 10px 60px;
      }
    }
  }
}

